<?xml version="1.0" encoding="UTF-8"?>
<my:MainWindow title="Hello BXML!" maximized="true"
	xmlns:bxml="http://pivot.apache.org/bxml" xmlns:my="info.goldhahn.serialterminal"
	xmlns:content="org.apache.pivot.wtk.content" xmlns="org.apache.pivot.wtk">

	<actionMappings>
		<Window.ActionMapping action="fileNew" keyStroke="CMD-N" />
		<!--Window.ActionMapping action="fileOpen" keyStroke="CMD-O" / -->
	</actionMappings>

	<menuBar>
		<MenuBar>
			<MenuBar.Item buttonData="File">
				<Menu>
					<Menu.Section>
						<Menu.Item action="fileNew">
							<buttonData>
								<content:MenuItemData text="New"
									keyboardShortcut="CMD-N" />
							</buttonData>
						</Menu.Item>
					</Menu.Section>
				</Menu>
			</MenuBar.Item>
		</MenuBar>
	</menuBar>
	
